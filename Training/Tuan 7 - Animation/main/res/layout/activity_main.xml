<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.edu.tdc.hello.MainActivity">

    <Button
        android:id="@+id/btn_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:text="Fire"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="6dp" />

    <ImageView
        android:id="@+id/img_tom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="-280dp"
        app:srcCompat="@drawable/tom"
        android:layout_above="@+id/btn_fire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img_bullet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        app:srcCompat="@drawable/bullet"
        android:layout_alignTop="@+id/img_tom"
        android:layout_toRightOf="@+id/btn_fire"
        android:layout_toEndOf="@+id/btn_fire"
        android:layout_marginTop="11dp" />

    <ImageView
        android:id="@+id/img_jerry"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/jerry"
        android:layout_alignTop="@+id/img_bullet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_jerry"
        android:layout_alignLeft="@+id/img_jerry"
        android:layout_alignStart="@+id/img_jerry"
        app:srcCompat="@drawable/mousecave" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/satang"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/btn_fire"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
